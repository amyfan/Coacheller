<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_main_alerts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlertsActivity" >

    <LinearLayout
        android:id="@+id/alert_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_Done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Done" />

            <Button
                android:id="@+id/button_cancelAllAlerts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button_Done"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="Cancel All Alerts" />

        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/listView_alerts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alert_buttons" >

    </ListView>

</RelativeLayout>